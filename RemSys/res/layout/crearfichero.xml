<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:background="@drawable/fondotitulo">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Crear Fichero"
            android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="16dp" android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Nombre fichero: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/Nfich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Contenido:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/ConFich"
            android:layout_width="match_parent"
            android:layout_height="298dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.01"
            android:ems="10"
            android:inputType="textMultiLine" android:gravity="top"/>

        <Button
            android:id="@+id/btncrearfich"
            android:layout_width="143dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/botoncrearfichero" />

    </LinearLayout>

</LinearLayout>